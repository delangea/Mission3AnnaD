@{
    ViewData["Title"] = "Grade Calculator";
}
@model GradeModel;
<h3 class="text-center"> Grade Calculator:</h3>
<p class="text-center">Enter your grade percentages by category to receieve your final score.</p>
<div class="d-flex justify-content-center">
    <form class="mx-auto" method="post">
        <div class="formgrid my-3">
            <span>Assigments:</span>
            <input id="assignments" class="form-control" type="number" min="0" asp-for="Assignments" />
            <span>Group Projects:</span>
            <input id="projects" class="form-control" asp-for="Projects" type="number" min="0" />
            <span>Quizzes:</span>
            <input id="quizzes" class="form-control" asp-for="Quizzes" type="number" min="0" />
            <span>Exams:</span>
            <input id="exams" class="form-control" asp-for="Exams" type="number" min="0" />
            <span>Intex:</span>
            <input id="intex" class="form-control" asp-for="INTEX" type="number" min="0" />
        </div>
        <div class="d-flex justify-content-center">
            <input class="btn btn-primary mx-auto" type="submit" value="Submit" id="submitBtn" />
        </div>
        <div asp-validation-summary="All"></div>
    </form>
</div>

<script src="~/js/index.js"></script>
